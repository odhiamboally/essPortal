
@model ForgotPasswordRequest

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

@section Styles {
    <link href="~/custom/auth/css/forgot-password.css" rel="stylesheet" asp-append-version="true" />
  
}

<div class="signin-card">
    <!-- Brand Header -->
    <div class="brand-header">
        <div class="brand-logo">
            <img src="~/custom/auth/images/unlogo.png" alt="United Nations" class="logo-image" />
        </div>
        <h2 class="brand-title">ESS Portal</h2>
        <p class="brand-subtitle">Empowering Members Financially</p>
    </div>

    <!-- Header -->
    <div class="signin-header">
        <h3 class="signin-title">Reset Your Password 🔐</h3>
        <p class="signin-subtitle">Enter your email address and we'll send you a reset link</p>
    </div>

    <!-- Forgot Password Form -->
    <form asp-action="ForgotPassword" method="post" class="signin-form" novalidate>
        <div class="form-group">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email"
                   class="form-control"
                   type="email"
                   placeholder="Enter your email address"
                   autocomplete="email"
                   autofocus />
            <span asp-validation-for="Email" class="field-validation-error"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-signin" id="forgotPasswordSubmitBtn">
            Send Reset Link
        </button>

        <!-- Only show validation summary if there are model-level errors -->
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
    </form>

    <!-- Back to Sign In -->
    <div class="back-link">
        <a asp-action="SignIn" class="back-to-signin">
            ← Back to Sign In
        </a>
    </div>

    <!-- Additional Help -->
    <div class="help-section">
        <p class="help-text">
            <strong>Having trouble?</strong><br>
            Contact IT Support for assistance with your account.
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/custom/auth/js/forgot-password.js" asp-append-version="true"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {

            // Focus on email input
            const emailInput = document.querySelector('input[name="Email"]');
            if (emailInput) {
                emailInput.focus();
            }
        });
    </script>

    
}