@model ContactInformationViewModel

<!-- Contact Information Modal -->
<div class="modal fade" id="contactInfoModal" tabindex="-1" aria-labelledby="contactInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="contactInfoModalLabel">
                    <i class="me-2">📞</i>
                    Edit Contact Information
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <form asp-action="UpdateContactInfo" asp-controller="Profile" method="post" id="contactInfoForm">
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="MobileNo" class="form-label">Mobile Number <span class="text-danger">*</span></label>
                                <input asp-for="MobileNo" type="tel" class="form-control" placeholder="Enter mobile number" required>
                                <span asp-validation-for="MobileNo" class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TelephoneNo" class="form-label">Telephone Number</label>
                                <input asp-for="TelephoneNo" type="tel" class="form-control" placeholder="Enter telephone number">
                                <span asp-validation-for="TelephoneNo" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhysicalAddress" class="form-label">Physical Address</label>
                        <textarea asp-for="PhysicalAddress" class="form-control" rows="3" placeholder="Enter your physical address"></textarea>
                        <span asp-validation-for="PhysicalAddress" class="invalid-feedback"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="City" class="form-label">City</label>
                                <input asp-for="City" type="text" class="form-control" placeholder="Enter city">
                                <span asp-validation-for="City" class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="PostCode" class="form-label">Postal Code</label>
                                <input asp-for="PostCode" type="text" class="form-control" placeholder="Enter postal code">
                                <span asp-validation-for="PostCode" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CountryRegionCode" class="form-label">Country/Region</label>
                                <select asp-for="CountryRegionCode" asp-items="@ProfileDropdownOptions.CountryOptions" class="form-select">
                                </select>
                                <span asp-validation-for="CountryRegionCode" class="invalid-feedback"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ContactEMailAddress" class="form-label">Contact Email</label>
                                <input asp-for="ContactEMailAddress" type="email" class="form-control" placeholder="Enter contact email">
                                <span asp-validation-for="ContactEMailAddress" class="invalid-feedback"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PostalAddress" class="form-label">Postal Address</label>
                        <textarea asp-for="PostalAddress" class="form-control" rows="2" placeholder="Enter postal address if different from physical address"></textarea>
                        <span asp-validation-for="PostalAddress" class="invalid-feedback"></span>
                    </div>

                    <div class="alert alert-info">
                        <strong>💡 Note:</strong> Ensure your contact information is up-to-date for important communications.
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="me-2">❌</i>Cancel
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="me-2">💾</i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>